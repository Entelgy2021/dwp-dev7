<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId"
                access="global"
                controller="Object_Controller">
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="cotiweb" type="boolean" default="true"/>
    <aura:attribute name="cotiCotiza" type="boolean" default="false"/>
    <aura:attribute name="cotiTarif" type="boolean" default="false"/>
    <aura:attribute name="cotizaBeta" type="boolean" default="false"/>
    <aura:attribute name="mydata" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.init}" />
    <div class="slds-p-bottom_large slds-p-left_large" >
        <div class="{!v.cotiweb ? 'slds-box' : 'slds-hide'}">
            <lightning:recordViewForm recordId="{!v.mydata}" objectApiName="OpportunityLineItem">
                <div class="slds-grid slds-gutters">
                    <div class="slds-col" role="listitem">
                        <div class="slds-border_bottom">
                            <lightning:outputField fieldName="suggested_apr_per__c" />
                        </div>
                        <div class="slds-border_bottom">
                            <lightning:outputField fieldName="proposed_apr_per__c" />
                        </div>
                        <aura:if isTrue="{!v.cotizaBeta}">
                            <div class="slds-border_bottom">
                                <lightning:outputField fieldName="price_quote_id__c" />
                            </div>
                        </aura:if>
                        <aura:if isTrue="{!v.cotiCotiza}">
                            <div class="slds-border_bottom">
                                <lightning:outputField fieldName="restructuring_fee_per__c" />
                            </div>
                        </aura:if>
                    </div>
                    <div class="slds-col" role="listitem">
                        <div class="slds-border_bottom">
                            <lightning:outputField fieldName="minimun_apr_per__c" />
                        </div>
                        <div class="slds-border_bottom">
                            <lightning:outputField fieldName="spread_per__c" />
                        </div>
                        <aura:if isTrue="{!v.cotiCotiza}">
                            <div class="slds-border_bottom">
                                <lightning:outputField fieldName="cancellation_fee_per__c" />
                            </div>
                        </aura:if>
                    </div>
                </div>
            </lightning:recordViewForm>
        </div>
        <div class="{!v.cotiweb ? 'slds-hide' : 'slds-box'}">
            <lightning:recordViewForm recordId="{!v.mydata}" objectApiName="OpportunityLineItem">
                <div class="slds-grid slds-gutters">
                    <div class="slds-col" role="listitem">
                        <div class="slds-border_bottom">
                            <label class="slds-form-element__label" for="text-input-id-1">Comisión mínima (%)</label>
                            <lightning:outputField fieldName="minimun_apr_per__c" variant="label-hidden" />
                        </div>
                    </div>
                    <div class="slds-col" role="listitem">
                        <div class="slds-border_bottom">
                            <label class="slds-form-element__label" for="text-input-id-1">Comisión propuesta (%)</label>
                            <lightning:outputField fieldName="minimun_fee_per__c" variant="label-hidden"/>
                        </div>
                    </div>
                </div>
            </lightning:recordViewForm>
        </div>
    </div>
</aura:component>
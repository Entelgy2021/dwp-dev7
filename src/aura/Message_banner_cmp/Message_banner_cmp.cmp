<aura:component access="global">
	<aura:attribute name="label" type="String" />

    <div class="slds-notify slds-notify_alert slds-theme_alert-texture slds-theme_warning slds-box slds-box--x-small" role="alert">
        <span class="slds-assistive-text">warning</span>
        <span class="slds-icon_container slds-icon-utility-warning slds-m-right_x-small" title="Description of icon when needed">
            <lightning:icon class="slds-m-left_x-small" iconName="utility:notification" size="x-small" />
         </span>
        <h2>{!v.label}</h2>
    </div>
</aura:component>
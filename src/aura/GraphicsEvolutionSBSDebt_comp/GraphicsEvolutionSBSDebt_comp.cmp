<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="GLOBAL">	
  <aura:handler name="init" value="{!this}" action="{!c.init}" />
  <aura:attribute name="bGrafica" type="Boolean" default="false" />
  <aura:attribute name="sFiltro" type="String" default="Total" />  
  <aura:attribute name="recordId" type="String" />
  <aura:attribute name="rows" type="List" />     
  <center>
    <div style="width:75%;">
      <aura:if isTrue="{!v.bGrafica}">
    	  <c:GraphicsGenerator_comp NombreCanvas="EVOLUCIÓN DEUDA SBS"
        posicionLeyenda="right" 
        NombreInforme="EVOLUCION_DEUDA_SBS"        
        TipoGrafica="line"
        Id="{!v.recordId}"
        Colores="#004481,#f7893b,#da3851,#48ae64,#bdbdbd"
        Filtro="{!v.sFiltro}"
        
        />
      </aura:if>
    </div>    
    <lightning:select aura:id="selFiltro" name="selFiltro" label="Filtro"  onchange="{!c.filtroGrafica}" class="slds-size_1-of-2 slds-p-horizontal_x-small"  >
                  <option value="Total">Total</option>
                  <option value="Directa">Directa</option>
                  <option value="Prestamo">Prestamo</option>
                  <option value="Comex">Comex</option>
                  <option value="Leasing">Leasing</option>
                  <option value="Descuento de Letras">Descuento de Letras</option>
                  <option value="Factoring">Factoring</option>
                  <option value="Otros directas">Otros directas</option>
                  <option value="Indirecta">Indirecta</option>
                  <option value="Fianzas">Fianzas</option>
                  <option value="Carta crédito">Carta crédito</option> 
                  <option value="Otros indirectas">Otros indirectas</option>                              
    </lightning:select>
  </center>
</aura:component>
